{
  "name": "dundring",
  "version": "0.1.0",
  "description": "",
  "author": "sivertschou",
  "private": true,
  "scripts": {
    "prepare": "husky install && yarn --cwd apps/frontend prepare && yarn --cwd apps/backend prepare",
    "start": "turbo run start --parallel",
    "frontend": "yarn --cwd apps/frontend start",
    "backend": "yarn --cwd apps/backend start",
    "clean": "rm -rf node_modules */**/node_modules"
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.5.1",
    "turbo": "^1.4.4"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "lint-staged": {
    "*.{ts,tsx,md,svg,html,json}": "prettier --write"
  }
}
