{
  "name": "dundring",
  "version": "0.1.0",
  "description": "",
  "author": "sivertschou",
  "private": true,
  "scripts": {
    "prepare": "husky install && turbo run prepare && bash scripts/print_dundring.sh",
    "start": "FORCE_COLOR=1 turbo run start --parallel",
    "mock": "FORCE_COLOR=1 turbo run mock --parallel",
    "build:mock": "turbo run build:mock --parallel",
    "build": "turbo run build --parallel",
    "build:backend": "yarn --cwd apps/backend build",
    "build:frontend": "yarn --cwd apps/frontend build",
    "frontend": "yarn --cwd apps/frontend start",
    "frontend:mock": "yarn --cwd apps/frontend mock",
    "backend": "yarn --cwd apps/backend start",
    "clean": "rm -rf node_modules */**/node_modules */**/.turbo"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^2.2.0",
    "husky": "^7.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.5.1",
    "turbo": "^1.4.4"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,md,svg,html,json}": "prettier --write"
  }
}
